<% @roundtables.each do |roundtable| %>
<div class="box">
	
	<span class= "image">
	<%= image_tag roundtable.member.profile.image_url(:thumb).to_s%>	
	</span>
		<span class="event-box">
			<div class="event-banner">
			<%= roundtable.topic %> hosted by <%= link_to "#{roundtable.member.full_name}", root_path %>
			</div>
			<div class="venue-box">
			Venue: <i><%= roundtable.venue.name%>, <%= roundtable.venue.address_1 %></i> <%= link_to "Google Maps", root_path%></br>
			Date: <%= roundtable.dinner_on.day%>/<%= roundtable.dinner_on.mon %>/<%= roundtable.dinner_on.year %></br>
			Price: <span class="btn" data-toggle="button">Â£20</span>
			</div>	
		</span>
		<span class="button-box">
			<button class="btn"><%= link_to "Request a seat", requests_path(:roundtable_id => roundtable.id), :method => :post %></button>		
		</span>
</div>
<% end %>