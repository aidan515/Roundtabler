<%= simple_form_for @member, :html => { :class => 'form-horizontal' } do |f| %>
<div class = 'form-inputs'>

<%= f.input :full_name %>
<%= f.input :email %>
<%= f.input :password %>
<%= f.input :password_confirmation %>
<%= f.input :city %>
</div>
<div class= 'form-actions'>
<%= f.button :submit, "Sign in" %>
</div>
<% end %>